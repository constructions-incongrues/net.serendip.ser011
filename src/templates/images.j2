{% extends "src/templates/base.j2" %}

{% block title %}Images{% endblock %}
{% block images_is_active %}is-active{% endblock %}

{% block content %}
<div class="columns is-multiline">
    {% for file in data[1].contents %}
    <div class="column is-one-third">
        <div class="card">
            <div class="card-image">
                <figure class="image">
                    <img src="../data/images/{{ file.name }}">
                </figure>
            </div>
        </div>
    </div>
    {% endfor %}
</div>
{% endblock %}